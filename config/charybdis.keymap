#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
                // 左键盘：5行×5列
                &kp ESC   &kp 1     &kp 2     &kp 3     &kp 4       // 左行1
                &kp TAB   &kp Q     &kp W     &kp E     &kp R       // 左行2
                &kp CAPS  &kp A     &kp S     &kp D     &kp F       // 左行3
                &kp LSHFT &kp Z     &kp X     &kp C     &kp V       // 左行4
                &kp LCTRL &kp LGUI  &kp LALT  &kp SPC   &kp BSPC    // 左行5

                // 右键盘：5行×5列（标记空键）
                &kp 5     &kp 6     &kp 7     &kp 8     &kp 9       // 右行1（第5列空→&none）
                &kp T     &kp Y     &kp U     &kp I     &kp O       // 右行2
                &kp G     &kp H     &kp J     &kp K     &kp L       // 右行3
                &kp B     &kp N     &kp M     &none     &kp /       // 右行4（第4列空→&none）
                &kp ENT   &kp RALT  &kp RGUI  &kp RCTRL &kp DEL     // 右行5
            >;
            // 矩阵变换（匹配空键位置，可选）
            transform {
                compatible = "zmk,matrix-transform";
                cols = <5>;
                rows = <10>;
                // 映射空键坐标：右行4=第8行，第4列；右行1=第5行，第5列
                map = <
                    0 0  0 1  0 2  0 3  0 4
                    1 0  1 1  1 2  1 3  1 4
                    2 0  2 1  2 2  2 3  2 4
                    3 0  3 1  3 2  3 3  3 4
                    4 0  4 1  4 2  4 3  4 4
                    5 0  5 1  5 2  5 3  &none  // 右行1（第5列空）
                    6 0  6 1  6 2  6 3  6 4
                    7 0  7 1  7 2  7 3  7 4
                    8 0  8 1  8 2  &none  8 4  // 右行4（第4列空）
                    9 0  9 1  9 2  9 3  9 4
                >;
            };
        };
    };
};
